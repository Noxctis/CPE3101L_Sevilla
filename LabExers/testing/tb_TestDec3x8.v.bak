`timescale 1 ns / 1 ps

module tb_Dec3x8();

  // DUT I/O
  reg        E;
  reg  [2:0] A;   // A[2]=MSB, A[0]=LSB
  wire [7:0] D;   // D[7:0] = {D7..D0}

  // Instantiate Unit Under Test (UUT)
  Dec3x8 UUT (.E(E), .A(A), .D(D));

  integer i;

  initial
  begin
    // Header
    $display("Time(ns) |  E  |  A   |      D[7:0]");
    $display("------------------------------------");

    // ---- E = 0, sweep A = 0..7 ----
    E = 1'b0;
    for (i = 0; i < 8; i = i + 1) begin
      A = i[2:0]; #1
      $display("%8t |  %b  | %b | %b", $time, E, A, D); #9;
    end

    // ---- E = 1, sweep A = 0..7 ----
    E = 1'b1;
    for (i = 0; i < 8; i = i + 1) begin
      A = i[2:0]; #1
      $display("%8t |  %b  | %b | %b", $time, E, A, D); #9;
    end

    // Stop simulation
    $stop;

    // Optional monitor
    $monitor("Monitor -> t=%0t E=%b A=%b D=%b", $time, E, A, D);
  end

endmodule
